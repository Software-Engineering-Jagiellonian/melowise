<IntervalScreen>:
    BoxLayout:
        Button:
            text: 'Back'
            on_release: root.back_to_home()
        Button:
            on_release: root.play_sound()
            size: '50dp', '50dp'
            pos_hint: {'center_x': 0.5}
            Image:
                source: '././assets/sound.png'
                y: self.parent.y + self.parent.height - 200
                x: self.parent.x
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Option 1'
            size_hint_y: None
            height: '48dp'
            on_release: root.submit_answer('Option 1')  # Bind the button to the submit_answer() method with the corresponding answer option
        Button:
            text: 'Option 2'
            size_hint_y: None
            height: '48dp'
            on_release: root.submit_answer('Option 2')  # Bind the button to the submit_answer() method with the corresponding answer option
        Button:
            text: 'Option 3'
            size_hint_y: None
            height: '48dp'
            on_release: root.submit_answer('Option 3')  # Bind the button to the submit_answer() method with the corresponding answer option
        Button:
            text: 'Option 4'
            size_hint_y: None
            height: '48dp'
            on_release: root.submit_answer('Option 4')  # Bind the button to the submit_answer() method with the corresponding answer option