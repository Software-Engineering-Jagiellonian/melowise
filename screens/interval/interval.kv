<IntervalScreen>:
    BoxLayout:
        Button:
            text: 'Back'
            on_release: root.back_to_home()
        Button:
            on_release: root.play_sound()
            size: '50dp', '50dp'
            pos_hint: {'center_x': 0.5}
            Image:
                source: '././assets/sound.png'
                y: self.parent.y + self.parent.height - 200
                x: self.parent.x
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Loading question..."
            font_size: 30
            size_hint_y: 0.3
            opacity: 1 if root.answers == [] else 0  # Show the label only when the answers haven't been loaded yet
        BoxLayout:
            orientation: 'vertical'
            opacity: 0 if root.answers == [] else 1  # Hide the buttons until the answers are loaded
            Button:
                id: answer_1
                text: root.answer_1
                size_hint_y: None
                height: '48dp'
                on_release: root.submit_answer(root.answers[0])  # Bind the button to the submit_answer() method with the corresponding answer option
            Button:
                id: answer_2
                text: root.answer_2
                size_hint_y: None
                height: '48dp'
                on_release: root.submit_answer(root.answers[1])  # Bind the button to the submit_answer() method with the corresponding answer option
            Button:
                id: answer_3
                text: root.answer_3
                size_hint_y: None
                height: '48dp'
                on_release: root.submit_answer(root.answers[2])  # Bind the button to the submit_answer() method with the corresponding answer option
            Button:
                id: answer_4
                text: root.answer_4
                size_hint_y: None
                height: '48dp'
                on_release: root.submit_answer(root.answers[3])  # Bind the button to the submit_answer() method with the corresponding answer option