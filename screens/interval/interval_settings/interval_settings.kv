<CustLabel@ButtonBehavior+Label>:
    color: .761, .190, .810, 1
    size_hint_x: .80
    font_size:30
<CustCheckBox@CheckBox>:
    color:.294, .761, .623
    size_hint_x: .20
<LabelCheckBox@BoxLayout>:
    text: ''
    group: ''

    CustCheckBox:
        id: cb
        #group: root.group

    CustLabel:
        on_press: cb._do_press()
        text: root.text

<IntervalSettingsScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        Button:
            text: 'Back'
            on_release: root.back_to_home()
            background_normal: ''
            background_color: colors.MAIN_RGBA
            opacity: 1 if self.state == 'normal' else .5
            size_hint_y: 0.5
        Button:
            text: 'Start'
            on_release: root.go_to_exercise()
            background_normal: ''
            background_color: colors.MAIN_RGBA
            opacity: 1 if self.state == 'normal' else .5
            size_hint_y: 0.5
