# statistics.kv

<StatisticsScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Statistics Screen'
            font_size: 14
            color: 0.25, 0.25, 0.65
            size_hint_y: .2
        BoxLayout:
            size_hint_y: .8
            orientation: 'vertical'
            BoxLayout:
                id: pie_chart_container
                size_hint_y: .8
                pos_hint: {"top":1}
            BoxLayout:
                id: bars_chart_container
                size_hint_y: .8
                pos_hint: {"top":1}
            Button:
                size_hint_y: .2
                text: 'Back'
                on_release: root.back_to_home()
